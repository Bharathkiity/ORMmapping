import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.SQLException;
import java.util.Scanner;

public class UpdateEmployeeName {
    public static void main(String[] args) throws ClassNotFoundException, SQLException {
        String driver, url, username, password;
        driver = "com.mysql.cj.jdbc.Driver";
        url = "jdbc:mysql://localhost:3306/edb12634";
        username = "root";
        password = "root";

        String updateQuery = "UPDATE employee SET name = ? ,email=? WHERE id = ?";
        
        Scanner sc = new Scanner(System.in);
        Connection con = DriverManager.getConnection(url, username, password);
        PreparedStatement st = con.prepareStatement(updateQuery);
        System.out.println("Please enter the employee ID to update:");
        int id = sc.nextInt();
        
        System.out.println("Please enter the new name:");
        String name = sc.next();
        System.out.println("Please enter the new email:");
        String email = sc.next();
        
       
        st.setString(1, name); 
        st.setInt(2, id); 
        st.setString(3, email);
        
        
        int status = st.executeUpdate();
        if (status >= 1) {
            System.out.println("Record updated successfully.");
        } else {
            System.out.println("Update failed. Employee ID may not exist.");
        }
        
        // Clean up resources
        st.close();
        con.close();
        sc.close();
    }
}
